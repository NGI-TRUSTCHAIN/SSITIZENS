{
  "name": "ssitizens-tokenization-api",
  "version": "0.1.0",
  "description": "",
  "private": true,
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "lint": "gts lint",
    "fix": "gts fix",
    "check": "npm-check --skip-unused",
    "update": "npm-check -u",
    "clean": "rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.yaml src/**/*.json src/**/*.js dist/src/",
    "compile": "tsc && tsc-alias && npm run copy-files",
    "build": "npm run clean && npm run compile",
    "test": "NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest",
    "start:redis": "docker start redis || docker run --name redis -p 6379:6379 -d redis:7",
    "start:postgres": "docker start postgres || docker run --name postgres -p 5432:5432 -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=postgres -d postgres:16",
    "start:services": "concurrently \"npm run start:redis\" \"npm run start:postgres\"",
    "start": "npm run start:services && wait-on tcp:6379 tcp:5432 && node --no-warnings=ExperimentalWarning --loader ts-paths-esm-loader/transpile-only ./src/server.ts",
    "start:without-docker": "node --no-warnings=ExperimentalWarning --loader ts-paths-esm-loader/transpile-only ./src/server.ts",
    "start:prod": "node ./dist/src/server.js",
    "stop:services": "docker stop redis postgres && docker rm redis postgres"

  },
  "engines": {
    "node": ">=22",
    "npm": "10.8.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.11.1",
    "eslint-plugin-prettier": "^5.2.1",
    "gts": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "npm-check": "^6.0.1",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "typechain": "^8.3.2",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@tsconfig/node22": "^22.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/morgan": "^1.9.9",
    "@types/nconf": "^0.10.7",
    "@types/node": "^22.8.1",
    "@types/node-fetch": "^2.5.12",
    "@types/pg": "^8.11.6",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "better-dni": "^4.4.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-async-handler": "^1.2.0",
    "express-openapi-validator": "^5.3.9",
    "helmet": "^8.0.0",
    "http-status": "^2.0.0",
    "jose": "^5.9.6",
    "js-yaml": "^4.1.0",
    "jsonpath-plus": "^10.1.0",
    "keycloak-connect": "^26.0.1",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "nconf": "^0.12.1",
    "node-cache": "^5.1.2",
    "pg": "^8.11.5",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "ts-paths-esm-loader": "^1.4.3",
    "tsconfig-paths": "^4.2.0",
    "tsyringe": "^4.8.0",
    "typescript": "~5.5.0",
    "unique-names-generator": "^4.7.1",
    "uuid": "^11.0.1",
    "winston": "^3.15.0"
  }
}
